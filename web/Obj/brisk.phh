function table_act_content($isstanding, $sitted, $table, $cur_table, $allowed)
{
  $ret = "";

  if ($isstanding) {
    if ($sitted < PLAYERS_N) {
      if ($allowed)
        $act = 'sit';
      else
        $act = 'reserved';
    }
  }
  else {
    if ($table == $cur_table)
      $act = 'wake';
    else
      $act = 'none';
  }

  if ($act != '')
    $ret = sprintf('j_tab_act_cont(%d, \'%s\');', $table, $act);

  return ($ret);
}

