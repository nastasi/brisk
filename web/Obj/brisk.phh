class Table {
  var $idx;
  var $player;
  var $player_n;

  var $auth_only;     // se tavolo riservato o libero

  var $wag_own;
  var $wag_com;
  var $wag_tout;

  var $table_token;
  var $table_start;   // information field

  var $wakeup_time;

  function Table() 
  {
  }
  
  function create($idx) 
  {
    if (($thiz = new Table()) == FALSE)
      return (FALSE);

    $thiz->idx       =   $idx;
    $thiz->player    =   array();
    $thiz->player_n  =   0;
    $thiz->auth_only =   FALSE;

    $thiz->wag_own   =  -1;
    $thiz->wag_com   =  "";
    $thiz->wag_tout   =  0;

    $thiz->table_token  = "";
    $thiz->table_start  = 0;
    
    $thiz->wakeup_time = 0;

    return ($thiz);
  }

