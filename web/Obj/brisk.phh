function csplitter($in, $sep)
{
  $st = 0;
  $id = 0;
  $out = array();
  $out[$id] = "";
  for ($i = 0 ; $i < strlen($in) ; $i++) {
    $ini = substr($in, $i, 1);
    if ($st == 0) {
      if ($ini == '\\')
        $st = 1;
      else if ($ini == $sep) {
        $id++;
        $out[$id] = "";
      }
      else {
        $out[$id] .= $ini;
      }
    }
    else if ($st == 1) {
      $out[$id] .= $ini;
      $st = 0;
    }
  }

  return ($out);
}

function xcape($s)
{
  $from = array (   '\\',     '@',        '|' );
  $to   = array ( '\\\\', '&#64;', '&brvbar;' );

  return (str_replace($from, $to, htmlentities($s,ENT_COMPAT,"UTF-8")));
}

function xcapelt($s)
{
  $from = array (   '\\',     '|',  "\t",  "\n");
  $to   = array ( '\\\\',   '\\|', "\\t", "\\n");

  return (str_replace($from, $to, $s));
}

function xcapemesg($s)
{
  $from = array (  "\n");
  $to   = array ( "\\n");

  return (str_replace($from, $to, $s));
}


